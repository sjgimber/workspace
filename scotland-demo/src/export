package com.example.tests;

import com.thoughtworks.selenium.*;
import org.junit.After;
import org.junit.Before;
import org.junit.Test;
import static org.junit.Assert.*;
import java.util.regex.Pattern;

public class export {
	private Selenium selenium;

	@Before
	public void setUp() throws Exception {
		selenium = new DefaultSelenium("localhost", 4444, "*chrome", "http://scotland-demo.trapezegroup.co.uk/");
		selenium.start();
	}

	@Test
	public void testExport() throws Exception {
		selenium.open("/");
		selenium.click("css=strong");
		selenium.type("id=origin", "Dunoon, Argyll & Bute");
		selenium.click("css=strong");
		selenium.type("id=destination", "Inverness City Centre, Highland");
		selenium.click("css=button.btn.ng-scope");
		selenium.waitForPageToLoad("30000");
	}

	@After
	public void tearDown() throws Exception {
		selenium.stop();
	}
}
